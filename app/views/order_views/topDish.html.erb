<h1 align="center">Platos Favoritos</h1>
 <div class="aboutUs">
  
  <table class="table table-inverse">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @topDish.each do |dish| %>
        <tr>

          <td><%= dish.name %></td>
          <td><%= dish.price %></td>

        </tr>
      <% end %>
        
    </tbody>
  </table>
</div>