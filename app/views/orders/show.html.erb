<h1 align="center" > Order <%= @Order%></h1>
<div class="aboutUs">
  
  <p>
    <strong>State:</strong>
    <%= @order.state %>
  </p>
  <p>
    <strong>table:</strong>
    <%= @table.number %>
  </p>
  <p>
    <strong>waiter:</strong>
    <%= @table.waiter.email %>
  </p>
  <table class="table table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Specification</th>
        <th>State</th>
        <th>Quantity</th>
        <th>Price</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @orderdishes.each do |orderdish| %>
        <tr>
          <td><%= image_tag orderdish.becomes(Dish).photo.url(:thumb) %></td>
          <td><%= orderdish.name %></td>
          <td><%= orderdish.specification %></td>
          <td><%= orderdish.orderstate %></td>
          <td><%= orderdish.quantity %></td>
          <td><%= orderdish.price %></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
  <p>
    <strong>Total price:</strong>
    <%= @order.price %>
  </p>
  <p>
  <%= link_to "Printable Receipt (PDF)", order_path(@order, format: 'pdf'),class:"btn btn-lg btn-template-primary" %>
</p>
  <%= link_to 'Back', orders_path ,class:"btn btn-lg btn-template-primary"%>
</div>