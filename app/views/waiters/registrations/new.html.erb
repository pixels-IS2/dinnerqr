<div class="form-top">
  <div class="form-top-left">
    <h1><strong>Sign up</strong></h1>
    <p>Enter their username and password to log</p>
  </div>
  <div class="form-top-right">
		<i class="fa fa-key"></i>
	</div>
</div>
<div class="form-bottom">
  <form class="login-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.email_field :email, autofocus: true ,class:"form-control input-lg", placeholder:"Email Address"%>
      </div>
    
      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off",type:"password",class:"form-control input-lg", placeholder:"Password" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off" ,type:"password",class:"form-control input-lg", placeholder:"Password confirmation"%>
      </div>
    
      <div class="field">
          Upload a profile photo :<%= f.file_field :photo  %>
      </div>
      <hr class="colorgraph">
        <%= f.submit "Sign up"  %>
    <% end %>
  </form>
</div>

