<%= stylesheet_link_tag 'font-awesome'%>
<%= stylesheet_link_tag "login_stylesheet" %>
<div class="container text-center">
  <div class="row omb_row-sm-offset-3">
  <div class="col-xs-12 col-sm-6">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <h2>Create account</h2>
          </div>
          <div class="form-group">
            <label class="control-label" for="signupName">Nombre</label>
            <%=f.text_field :name%>
          </div>
          <div class="form-group">
            <label class="control-label" for="signupEmail">Email</label>
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="form-group">
            <label class="control-label" for="signupPassword">Contraseña</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="form-group">
            <label class="control-label" for="signupPasswordagain">Repite tu conrtaseña</label>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="actions","form-group">
            <%= f.submit "Sign up",:class => "btn btn-info btn-block" %>
          </div>
          <p class="form-group">By creating an account, you agree to our <a href="#">Terms of Use</a> and our <a href="#">Privacy Policy</a>.</p>

        <% end %>

        <%= render "devise/shared/links" %>


      </div>
    </div>
  </div>
</div>
</div>
</div>
