<h2 align="center">Sign in</h2>
<div class="aboutUs">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true ,type:"email",class:"form-control"%>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>

      <div class="field">
        <%= f.label :password  %>
        <%= f.password_field :password, autocomplete: "off" ,type:"password",class:"form-control"%>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,class:"form-check-label" %>
          </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in",type:"submit",class:"btn btn-lg btn-template-primary" %>
      </div>
      <%= render "devise/shared/links" %>
  <% end %>

</div>