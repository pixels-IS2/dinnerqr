<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1><strong>Dinner QR</strong></h1>
          <div class="description">
            <!-- <p>Welcome</p> -->
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h1><strong>Sign up</strong></h1>
              <p>Enter your username and password to log</p>
            </div>
            <div class="form-top-right">
        			<i class="fa fa-key"></i>
        		</div>
          </div>
          <div class="form-bottom">
            <form role="form" action="" method="post" class="login-form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name),role:"form") do |f| %>
                <fieldset>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true ,type:"email",class:"form-control input-lg", placeholder:"Email Address"%>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  </div>
            
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "off" ,type:"password",class:"form-control input-lg", placeholder:"Password"%>
                  </div>
            
                  <% if devise_mapping.rememberable? -%>
                    <div class="form-check">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me,class:"form-check-label" %>
                    </div>
                  <% end -%>
              
        				  <hr class="colorgraph">
                  <div >
                    <%= f.submit "Log in",type:"submit",class:"btn btn-lg btn-success btn-block" %>
                  </div>
                  
                  <%= render "devise/shared/links" %>
                </fieldset> 
              <% end %>
            </form>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 social-login">
        	<h3>...or login with:</h3>
        	<div class="social-login-buttons">
            <%= link_to client_facebook_omniauth_authorize_path,class:"btn btn-link-1 btn-link-1-facebook" do %>
              <%= content_tag :i," ", class:"fa fa-facebook" %>
              facebook
            <% end %>
            <%= link_to client_twitter_omniauth_authorize_path,class:"btn btn-link-1 btn-link-1-twitter" do %>
              <%= content_tag :i," ", class:"fa fa-twitter" %>
              Twitter
            <% end %>
            <%= link_to client_google_oauth2_omniauth_authorize_path,class:"btn btn-link-1 btn-link-1-google-plus" do %>
              <%= content_tag :i," ", class:"fa fa-google-plus" %>
              Google Plus
            <% end %>
        	</div>
        </div>
      </div>
    </div>
  </div>
</div>
