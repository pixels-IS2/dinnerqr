
<h1 align="center">Dishes</h1>
<div class="aboutUs">
<table class="table">
  <thead>
    <tr>
      <th >Name</th>
      <th>State</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.state %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td>
          <%= link_to dish do %>
            <%= content_tag :i," ", class:"fa fa-eye" %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_dish_path(dish) do %>
            <%= content_tag :i," ", class:"fa fa-pencil" %>
          <% end %>
        </td>
        <td>
          <%= link_to dish, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= content_tag :i," ", class:"fa fa-trash" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @dishes %>

<br>

<%= link_to 'New Dish', new_dish_path,class:"btn btn-lg btn-template-primary" %>
</div>