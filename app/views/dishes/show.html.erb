
<div class="aboutUs">

  <h1 align=center>
  
    <%= @dish.name %>
  </h1>
<p>
  
  <br>
  <%= image_tag @dish.photo.url(:thumb) %>
</p>


<p>
  <strong>State:</strong>
  <%= @dish.state %>
</p>


<p>
  <strong>Description:</strong>
  <%= @dish.description %>
</p>

<p>
  <strong>Speciality:</strong>
  <%= @dish.speciality.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @dish.price %>
</p>
<h3>Comments</h3>
<ul>
  <% @comments.each do |comment| %>
    <li>
      <%= comment.body %> - <%= comment.client.email %>
    </li>
  <% end %>
  
  <%= will_paginate @comments %>
  
</ul>
<%= render "comments/form" %>



<%= link_to 'Back', dishes_path %>
</div>