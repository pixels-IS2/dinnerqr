

<%= form_with(model: dish, local: true) do |form| %>
  <% if dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :dish_name,type:"text",class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select(:state, ['Available', 'Out of stock', 'Discount'] ,class:"form-control") %>


  </div>

    <div class="field">
      Portada:<%= form.file_field :photo %>

    </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :dish_description ,class:"form-control"%>
  </div>

  <div class="field">
    <%= form.label :speciality %>
    <%= form.select :speciality_id, options_for_select(Speciality.all.map{|s|[s.name, s.id]}, params[:speciality_id]) %>

  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, id: :dish_price,class:"form-control" %>
  </div>
  
  <div class="field">
    <%= form.label :favorite %>
    <%= form.check_box :favorite ,class:"form-control" %>
  </div>
  
  <div class="actions">
    <%= form.submit "Submit",type:"submit",class:"btn btn-lg btn-template-primary"%>
  </div>
<% end %>
