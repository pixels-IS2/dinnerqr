<h1>Tables</h1>

<table class="table table-inverse">
  <thead>
    <tr>
      <th>Number</th>
      <th>Sector</th>
      <th>waiter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.number %></td>
        <td><%= table.sector %></td>
        <td><%= table.waiter.email%></td>
        <td>
          <%= link_to table do %>
            <%= content_tag :i," ", class:"fa fa-eye" %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_table_path(table) do %>
            <%= content_tag :i," ", class:"fa fa-pencil" %>
          <% end %>
        </td>
        <td>
          <%= link_to table, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= content_tag :i," ", class:"fa fa-trash" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Table', new_table_path %>
